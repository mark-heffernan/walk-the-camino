<h1>Gallery</h1>

<h3>This is a gallery of all the photos taken on the big trip so far!</h3>

{% set length = collections.gallery.length %}
{% if length != 0 %}
    <div class="masonry">
        {% for image in collections.gallery %}
            {% set i = loop.index %}
              <div class="brick">
                <figure>
                    <a href="/gallery/{{ image.name }}"><img src="/gallery/{{ image.name }}" alt="{{ image.name }}" /></a>
                    <figcaption>
                        {{ image.name }}
                    </figcaption>
                </figure>
              </div>
        {% endfor %}
    </div>
{% endif %}
