---
layout: base
---

<header class="hero">
  <div class="hero-content">
    <div class="intro">
      {{ content | safe }}
    </div>

    <div style="margin-top:30px">
      {% if collections.stickys %}
      <h4 class="featured_posts">Featured Posts</h4>
        <ul class="hero__social-links">
          {% for post in collections.stickys %}
            {% if loop.index0 < 4 %}
              <li class="sticky_posts">
                <a href="{{ post.url }}">{{ post.data.title }}</a>
              </li>
            {% endif %}  
          {% endfor %}
        </ul>
      {% else %}
        <h3 style="font-style:italic;">No sticky posts today!</h3>
      {% endif %}
    </div>
  </div>

</header>

<section class="post-list__wrapper">
  <h2 class="post-list__heading">Recent Posts</h2>

  {% set postslist = collections.posts | head(-5) %}
  {% include "posts-list.njk" %}

</section>

<a class="all-posts-link" href="{{ '/blog/' | url }}">View All Posts</a>
