---
layout: base
---

<header class="hero">
  <div class="hero-content">
    <div class="intro">
      {{ content | safe }}
    </div>

    {% if collections.sticky %}
    <div>
      <img src="/images/pin_blue_32.png" alt="pin" style="float:left;width:32px;height:32px;margin-right:15px;" /> 
      <ul class="hero__social-links">
        {% for post in collections.sticky | reverse | head(-3) %}
          <li>
            <a  href="{{ post.url }}">{{ post.data.title }}</a>
          </li>
        {% endfor %}
      </ul> 
    </div>
    {% else %}
      <h3 style="font-style:italic;">No sticky posts today!</h3>
    {% endif %}
  </div>

</header>

<section class="post-list__wrapper">
  <h2 class="post-list__heading">Recent Posts</h2>

  {% set postslist = collections.posts | head(-5) %}
  {% include "posts-list.njk" %}

</section>

<a class="all-posts-link" href="{{ '/blog/' | url }}">View All Posts</a>