<form name="contact" action="/thanks" netlify-honeypot="bot-field" data-netlify="true">
    <div class="container">
      <div class="screen">
        <div class="screen-header">
          <div class="screen-header-left">
            <div class="screen-header-button close"></div>
            <div class="screen-header-button maximize"></div>
            <div class="screen-header-button minimize"></div>
          </div>
          <div class="screen-header-right">
            <div class="screen-header-ellipsis"></div>
            <div class="screen-header-ellipsis"></div>
            <div class="screen-header-ellipsis"></div>
          </div>
        </div>
        <div class="screen-body">
          <div class="screen-body-item left">
            <div class="app-title">
              <span>CONTACT</span>
              <span>US</span>
            </div>
            <div class="app-contact">CONTACT INFO: travel@heffo.biz</div>
          </div>
          <div class="screen-body-item">
            <div class="app-form">
              <div class="app-form-group">
                <label for="bot-field">Don't fill this out if you're human:<input class="app-form-control" name="bot-field"></label>
              </div>
              <div class="app-form-group">
                <input class="app-form-control" name="Name" placeholder="NAME" required>
              </div>
              <div class="app-form-group">
                <input class="app-form-control" name="Email" placeholder="EMAIL" required>
              </div>
              <div class="app-form-group message">
                <input class="app-form-control" name="Message" placeholder="MESSAGE" required>
              </div>
              <div class="app-form-group buttons">
                <button class="app-form-button">SEND</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>